<ResourceDictionary 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:FreshMvvmEnterpriseWizard.Services"
             xmlns:local="clr-namespace:FreshMvvmEnterpriseWizard.Styles">

            <Style TargetType="Grid" x:Key="GridSectionDividerHorizontal">
                <Setter Property="Background" Value="{Binding SectionDivider, Source={x:Static services:VisualStudioUIService.Instance}}" />
                <Setter Property="Height" Value="1.5" />
            </Style>

            <Style TargetType="Grid" x:Key="GridMainPage">
                <Setter Property="Background" Value="{Binding WindowPanel, Source={x:Static services:VisualStudioUIService.Instance}}" />
            </Style>

</ResourceDictionary>
